@page "/admin/courses"
@inherits CourseListBase

<div id="wrapper">

    <Header Class="header" UkSticky="top:20; cls-active:header-sticky">
        <Breadcrumbs>
            <li><a href="/">Home</a></li>
            <li><a href="/admin/dashboard">Admin dashboard</a></li>
            <li>Courses</li>
        </Breadcrumbs>
    </Header>

    <SearchOnMobile></SearchOnMobile>

    <SearchOnDesktop></SearchOnDesktop>

    <SideNav></SideNav>

    <!-- content -->
    <div class="page-content">
        <div class="page-content-inner">


            <div class="d-flex justify-content-between mb-3">
                <h3> Courses (@PaginatedList.TotalItems) </h3>

                <div>
                    <a href="javascript:void(0)" @onclick="AddCourse" class="btn btn-default">
                        <i class="uil-plus"> </i> New course
                    </a>
                </div>
            </div>

            <div class="uk-child-width-1-3@m uk-margin-medium-bottom" uk-grid uk-scrollspy="cls: uk-animation-slide-bottom-small; target: > div ; delay: 200">

                @if (SomeCourses != null)
                {
                    foreach (var OneCourse in SomeCourses)
                    {
                        <div>

                            <div class="card animate-this uk-inline-clip">

                                @if (OneCourse.Thumbnail != null)
                                {
                                    <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(OneCourse.Thumbnail.Data))" alt="" style="height: 180px;">
                                }
                                else
                                {
                                    <img src="/images/course/image-367x190.png" alt="" style="height: 180px;">
                                }

                                <div class="card-body text-center pb-3">
                                    <h6 class=" mb-0"> @OneCourse.Title </h6>
                                </div>
                                <div class="card-footer py-0 border-top-0">
                                    <div class="d-flex justify-content-between px-5 pb-3">
                                        <a href="/admin/course/@OneCourse.Id" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Edit">
                                            <i class="uil-edit-alt"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Send Message">
                                            <i class="uil-envelope"></i>
                                        </a>
                                        <a href="javascript:void(0)" @onclick="@(() => DeleteCourse(OneCourse))" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Delete">
                                            <i class="uil-trash-alt"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    }
                }
            
            </div>


            <ul class="uk-pagination my-5 uk-flex-center" uk-margin>
                <li class="uk-active"><span>1</span></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li class="uk-disabled"><span>...</span></li>
                <li><a href="#"><span uk-pagination-next></span></a></li>
            </ul>

            <Footer></Footer>

        </div>

    </div>

</div>