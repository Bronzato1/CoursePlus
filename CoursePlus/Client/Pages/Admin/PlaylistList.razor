@page "/admin/playlists"
@inherits PlaylistListBase
@attribute [Authorize(Policy = Policies.IsAdmin)]

<div id="wrapper">

    <Header Class="header" UkSticky="top:20; cls-active:header-sticky">
        <Breadcrumbs>
            <li><a href="/">Home</a></li>
            <li><a href="/admin/dashboard">Admin dashboard</a></li>
            <li>Playlists</li>
        </Breadcrumbs>
    </Header>

    <SearchOnMobile></SearchOnMobile>

    <SearchOnDesktop></SearchOnDesktop>

    <SideNav></SideNav>

    <!-- content -->
    <div class="page-content">
        <div class="page-content-inner">


            <div class="d-flex justify-content-between mb-3">
                <h3> Playlists (@PaginatedList.TotalItems) </h3>

                <div>
                    <a href="javascript:void(0)" @onclick="AddPlaylist" class="btn btn-default">
                        <i class="uil-plus"> </i> Add playlist
                    </a>
                </div>
            </div>

            <div class="uk-child-width-1-3@m uk-margin-medium-bottom" uk-grid uk-scrollspy="cls: uk-animation-fade ; target: > div ; delay: 100">

                @if (SomePlaylists != null)
                {
                    foreach (var OnePlaylist in SomePlaylists)
                    {
                        <div style="visibility: hidden;">

                            <div class="card animate-this uk-inline-clip">

                                @if (OnePlaylist.Thumbnail != null)
                                {
                                    <img src="@String.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(OnePlaylist.Thumbnail.Data))" alt="" style="height: 180px;">
                                }
                                else
                                {
                                    <img src="/images/playlist/image-367x190.png" alt="" style="height: 180px;">
                                }

                                <div class="card-body text-center pb-3">
                                    <h6 class=" mb-0"> @OnePlaylist.Title </h6>
                                </div>
                                <div class="card-footer py-0 border-top-0">
                                    <div class="d-flex justify-content-between px-5 pb-3">
                                        <a href="/admin/playlist/@OnePlaylist.Id" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Edit">
                                            <i class="uil-edit-alt"></i>
                                        </a>
                                        <a href="javascript:void(0)" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Send Message">
                                            <i class="uil-envelope"></i>
                                        </a>
                                        <a href="javascript:void(0)" @onclick="@(() => DeletePlaylist(OnePlaylist))" class="btn btn-icon btn-hover btn-circle" uk-tooltip="Delete">
                                            <i class="uil-trash-alt"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                }

            </div>

            <Pager PageIndex=@PaginatedList.PageIndex TotalPages=@PaginatedList.TotalPages OnClick="PageIndexChanged" AlignClass="uk-flex-center"
                   HasNextPage=@PaginatedList.HasNextPage HasPreviousPage=@PaginatedList.HasPreviousPage>
            </Pager>

            <Footer></Footer>

        </div>

    </div>

</div>